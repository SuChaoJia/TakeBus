<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#f5f5f5"
    android:scrollbars="none"
    android:layout_below="@id/linearlayout"
    android:id="@+id/scrollView"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        >      
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@drawable/linearlayoutbackground"
        android:layout_margin="10dip"
    >            
     <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="我的常用站"
         android:textColor="#666666"
         android:textSize="10dip"
         android:layout_margin="5dip"
         />   

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dip"
        android:layout_marginTop="3dip"
        android:id="@+id/editCommonStation"
        >      
     <ImageView 
         android:id="@+id/img"
         android:layout_width="14dip"
         android:layout_height="15dip"
         android:layout_marginLeft="7dip"
         android:background="@drawable/location32px"
         android:layout_centerVertical="true"
         />
     <Button 
         android:id="@+id/btn_set"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="广大生活区"
         android:textColor="#333333"
         android:background="@null"
         android:layout_toRightOf="@id/img"
         android:layout_marginLeft="3dip"
         android:layout_centerVertical="true" 
         android:textSize="14sp"       
         />
       <ImageView 
         android:id="@+id/img_edit"
         android:layout_width="14dip"
         android:layout_height="15dip"
         android:background="@drawable/edit_active32px"
         android:layout_alignParentRight="true"
         android:layout_marginRight="15dip"
         android:layout_centerVertical="true" 
         />   
    </RelativeLayout>
      
      <View 
          android:layout_width="match_parent"
          android:layout_height="0.1dip"
          android:background="#dddddd" 
          />   
	   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dip"
        android:id="@+id/setCommonStation"
        >      
     <ImageView 
         android:id="@+id/img1"
         android:layout_width="14dip"
         android:layout_height="15dip"
         android:layout_marginLeft="7dip"
         android:background="@drawable/location32px"
         android:layout_centerVertical="true"
         />
     <Button 
         android:id="@+id/btn_set1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="请先设置常用站"
         android:textColor="#333333"
         android:background="@null"
         android:layout_toRightOf="@id/img1"
         android:layout_marginLeft="3dip"
         android:layout_centerVertical="true"
         android:textSize="14sp"     
         />
    </RelativeLayout>
   </LinearLayout> 
	<FrameLayout 
	    android:id="@+id/frameLayout_content"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
	    >
	</FrameLayout>
	</LinearLayout>
</ScrollView>
